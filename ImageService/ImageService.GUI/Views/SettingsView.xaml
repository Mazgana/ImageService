<UserControl x:Class="ImageService.GUI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageService.GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <TextBlock HorizontalAlignment="Left" Margin="324,41,0,0" TextWrapping="Wrap" Text="Settings" VerticalAlignment="Top" Height="60" Width="195" FontSize="40" FontWeight="Bold"/>
        <Label x:Name="check" Content="{Binding SettingsModel.Name, Mode=OneWay}"
               Margin="61,41,633,379"/>
        <Label Content="Output Directory:" HorizontalAlignment="Left" Margin="61,103,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.263,-6" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="outputDir" Content="{Binding SettingsModel.OutputDirectory, Mode=OneWay}" HorizontalAlignment="Left" Margin="256,106,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.263,-6" FontSize="18" Height="31" Width="305"/>
        <Label Content="Source Name:" HorizontalAlignment="Left" Margin="61,142,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.263,-6" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="sourceName" Content="{Binding SettingsModel.SourceName, Mode=OneWay}" HorizontalAlignment="Left" Margin="256,145,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.263,-6" FontSize="18" Height="31" Width="305"/>
        <Label Content="Log Name:" HorizontalAlignment="Left" Margin="61,181,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.263,-6" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="logName" Content="{Binding SettingsModel.LogName, Mode=OneWay}" HorizontalAlignment="Left" Margin="256,184,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.263,-6" FontSize="18" Height="31" Width="305"/>
        <Label Content="Thumbnail Size:" HorizontalAlignment="Left" Margin="61,220,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.263,-6" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="thumbSize" Content="{Binding SettingsModel.ThumbnailSize, Mode=OneWay}" HorizontalAlignment="Left" Margin="256,223,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.263,-6" FontSize="18" Height="31" Width="305"/>
    </Grid>
</UserControl>

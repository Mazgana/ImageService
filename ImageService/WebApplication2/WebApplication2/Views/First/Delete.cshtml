@model WebApplication2.Models.Image

@{
    ViewBag.Title = "Delete";
}

<center>
    <div>

        <br />
        <p style="font-family:Gabriola;font-size:200%;">
            <b>
                Do you want to delete this image?
            </b>
        </p>

        <img src="~/outputCheck/@Html.DisplayFor(model => model.ThumbPath)" class="thumbnail" alt="-sample-">
    </div>
    <div class="caption">
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <p>date: @Html.DisplayFor(model => model.Date)</p>
    </div>

    <p>
        <button type="button" id="btnClose" class="btn btn-primary" onclick="onDelete()">Delete</button>
        <button type="button" id="btnCancel" class="btn btn-danger" onclick="onCancel()">Cancel</button>
    </p>

</center>

<script type="text/javascript">
	function onDelete() {
		window.location.href = '@Url.Action("DeletePhoto", new { thumbpath = Model.ThumbPath })';
	}
	function onCancel() {
		window.location.href = '@Url.Action("Cancel")';
	}
</script>
@{
    ViewBag.Title = "DeleteHandler";
}

<h2>Close handler?</h2>
<p>
    <button type="button" id="btnClose" onclick="onClose()">Close</button><br />
    <button type="button" id="btnCancel" onclick="onCancel()">Cancel</button><br />
</p>

<script type="text/javascript">
	function onClose() {
		$("#btnClose").attr('disabled', !this.checked);
        $("#btnCancel").attr('disabled', !this.checked);
		window.location.href = '@Url.Action("CloseHandler")';
	}
	function onCancel() {
        $("#btnClose").attr('disabled', !this.checked);
		$("#btnCancel").attr('disabled', !this.checked);
		window.location.href = '@Url.Action("Config")';
	}
</script>